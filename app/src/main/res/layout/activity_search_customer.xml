<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchCustomerActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custSearch_btn" />

    <EditText
        android:id="@+id/customerID_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="C123456789"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/custSearch_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/custSearch_btn"
        android:layout_width="210dp"
        android:layout_height="66dp"
        android:layout_marginBottom="12dp"
        android:text="Search Customer"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView2"
        app:layout_constraintEnd_toEndOf="@+id/customerID_txt"
        app:layout_constraintStart_toStartOf="@+id/customerID_txt"
        app:layout_constraintTop_toBottomOf="@+id/customerID_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>